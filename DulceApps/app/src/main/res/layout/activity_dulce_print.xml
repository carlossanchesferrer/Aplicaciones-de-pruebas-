<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    tools:context="com.carlossanchez.dulceapps.DulcePrintActivity"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="match_parent"
     android:layout_width="match_parent">

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <TextView
        android:id="@+id/texp0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:fontFamily="@font/aclonica"
        android:text="Mi Dulce Receta"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp"
        android:textStyle="bold" />


    <Button
        android:id="@+id/dulce10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce9"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce9"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce8"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce7"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce7"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce6"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce5"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce4"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce3"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce2"
        android:layout_margin="@dimen/bt1" />

    <Button
        android:id="@+id/dulce2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/dulce1"
        android:layout_margin="@dimen/bt1"
        android:background="@drawable/crismas" />

    <Button
        android:id="@+id/dulce1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_below="@+id/text1"
        android:layout_margin="@dimen/bt1"
        android:background="@drawable/dulce1"
        android:padding="10dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/texp0"
        android:fontFamily="casual"
        android:text="Chrismas cupcake de chocolate"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textStyle="bold" />
</RelativeLayout>

</ScrollView>
